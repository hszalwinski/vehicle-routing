{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "optimization",
    "constraints"
  ],
  "properties": {
    "optimization": {
      "type": "object",
      "required": [
        "minimizeWaitingTime",
        "minimizeVehiclesUsed"
      ],
      "properties": {
        "minimizeWaitingTime": {
          "type": "boolean"
        },
        "minimizeVehiclesUsed": {
          "type": "boolean"
        }
      }
    },
    "constraints": {
      "type": "object",
      "required": [
        "maxWorkTimeEnabled",
        "maxRouteDistanceEnabled",
        "maxRouteTimeEnabled"
      ],
      "properties": {
        "maxWorkTimeEnabled": {
          "type": "boolean"
        },
        "maxRouteDistanceEnabled": {
          "type": "boolean"
        },
        "maxRouteTimeEnabled": {
          "type": "boolean"
        }
      }
    },
    "genetic": {
      "type": "object",
      "required": [],
      "properties": {
        "iterationsCount": {
          "type": "integer",
          "minimum": 100,
          "maximum": 10000000
        },
        "populationSize": {
          "type": "integer",
          "multipleOf": 2,
          "minimum": 10,
          "maximum": 10000
        }
      }
    }
  }
}