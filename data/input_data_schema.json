{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "configuration",
    "vehicles",
    "locations"
  ],
  "properties": {
    "configuration": {
      "$id": "#/properties/configuration",
      "type": "object",
      "required": [
        "optimization",
        "constraints"
      ],
      "properties": {
        "optimization": {
          "$id": "#/properties/configuration/properties/optimization",
          "type": "object",
          "required": [
            "minimizeWaitingTime",
            "minimizeVehiclesUsed"
          ],
          "properties": {
            "minimizeWaitingTime": {
              "$id": "#/properties/configuration/properties/optimization/properties/minimizeWaitingTime",
              "type": "boolean"
            },
            "minimizeVehiclesUsed": {
              "$id": "#/properties/configuration/properties/optimization/properties/minimizeVehiclesUsed",
              "type": "boolean"
            }
          }
        },
        "constraints": {
          "$id": "#/properties/configuration/properties/constraints",
          "type": "object",
          "required": [
            "maxWorkTimeEnabled",
            "maxRouteDistanceEnabled",
            "maxRouteTimeEnabled"
          ],
          "properties": {
            "maxWorkTimeEnabled": {
              "$id": "#/properties/configuration/properties/constraints/properties/maxWorkTimeEnabled",
              "type": "boolean"
            },
            "maxRouteDistanceEnabled": {
              "$id": "#/properties/configuration/properties/constraints/properties/maxRouteDistanceEnabled",
              "type": "boolean"
            },
            "maxRouteTimeEnabled": {
              "$id": "#/properties/configuration/properties/constraints/properties/maxRouteTimeEnabled",
              "type": "boolean"
            }
          }
        }
      }
    },
    "vehicles": {
      "$id": "#/properties/vehicles",
      "type": "array",
      "minItems": 1,
      "items": {
        "$id": "#/properties/vehicles/items",
        "type": "object",
        "required": [
          "vehicleId",
          "maxWorkTime",
          "maxRouteDistance",
          "totalCapacity"
        ],
        "properties": {
          "vehicleId": {
            "$id": "#/properties/vehicles/items/properties/vehicleId",
            "type": "integer",
            "description": "Identifier of vehicle",
            "minimum": 0
          },
          "maxWorkTime": {
            "$id": "#/properties/vehicles/items/properties/maxWorkTime",
            "type": "integer",
            "description": "Daily maximum work time in seconds",
            "examples": [
              7200
            ],
            "minimum": 0
          },
          "maxRouteDistance": {
            "$id": "#/properties/vehicles/items/properties/maxRouteDistance",
            "type": "integer",
            "description": "Maximum route distance in meters",
            "examples": [
              100000
            ],
            "minimum": 0
          },
          "totalCapacity": {
            "$id": "#/properties/vehicles/items/properties/totalCapacity",
            "type": "integer",
            "description": "Vehicle capacity in kilograms",
            "examples": [
              1000
            ],
            "minimum": 0
          }
        }
      }
    },
    "locations": {
      "$id": "#/properties/locations",
      "type": "array",
      "description": "List of locations - depot is the first one on the list",
      "items": {
        "$id": "#/properties/locations/items",
        "type": "object",
        "required": [
          "locationId",
          "latitude",
          "longitude"
        ],
        "properties": {
          "locationId": {
            "$id": "#/properties/locations/items/properties/locationId",
            "type": "integer",
            "description": "Identifier of a location",
            "minimum": 0
          },
          "latitude": {
            "$id": "#/properties/locations/items/properties/latitude",
            "type": "number",
            "examples": [
              53.42389
            ]
          },
          "longitude": {
            "$id": "#/properties/locations/items/properties/longitude",
            "type": "number",
            "examples": [
              22.160233
            ]
          }
        }
      }
    }
  }
}